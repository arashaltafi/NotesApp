<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="font">@font/gilroy_light</item>
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

    <style name="ThemeOverlay.search" parent="Theme.NotesApp">
        <!-- Text color -->
        <item name="android:editTextColor">@color/ColorWhite</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/ColorGray</item>
    </style>

</resources>